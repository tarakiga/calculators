                        <template x-for="(activity, key) in activities" :key="key">
                            <div 
                                class="activity-card"
                                :class="{ selected: selectedActivity === key }"
                                @click="selectedActivity = key; calculateROI()"
                            >
                                <div class="activity-icon" x-text="activity.icon"></div>
                                <div class="activity-name" x-text="activity.name"></div>
                            </div>
                        </template>
                    </div>
