                        type="range" 
                        x-model="actualWork" 
                        min="0" 
                        max="120" 
                        class="range-input"
                        @input="calculateROI()"
                    >
                    <div class="range-display">
                        <span>0 min</span>
                        <span class="range-value" x-text="actualWork + ' minutes'"></span>
                        <span>2 hours</span>
                    </div>
                </div>

                <!-- Motivation Level -->
                <div class="input-group">
                    <label class="input-label">Current Motivation Level</label>
                    <input 
                        type="range" 
                        x-model="motivationLevel" 
                        min="1" 
                        max="10" 
                        class="range-input"
                        @input="calculateROI()"
                    >
                    <div class="range-display">
                        <span>😴 Dead</span>
                        <span class="range-value" x-text="motivationLevel + '/10'"></span>
                        <span>🚀 Hyped</span>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="action-buttons">
                    <button @click="calculateROI()" class="btn btn-primary">
                        📊 Calculate ROI
