                        <span x-show="!timerRunning">⏱️ Start Timer</span>
                        <span x-show="timerRunning">⏸️ Stop Timer</span>
                    </button>
                    <button @click="reset()" class="btn btn-secondary">
                        🔄 Reset All
                    </button>
                </div>

                <!-- Advanced Share Button -->
                <div x-show="resultsCalculated" class="share-dropdown">
