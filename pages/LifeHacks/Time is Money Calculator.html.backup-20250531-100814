    <script>
        document.addEventListener('alpine:init', () => {
            Alpine.data('timeMoneyCalculator', () => ({
                salary: 75000,
                activity: 'Watching Netflix',
                hours: 2,
                minutes: 30,
                frequency: 'once',
                results: false,
                showAchievement: false,
                achievementIcon: '',
                achievementTitle: '',
                achievementDescription: '',
                hourlyRate: 0,
                totalHours: 0,
                activityCost: 0,
                frequencyText: '',
                alternativePurchases: [
                    { name: 'Big Macs', icon: 'üçî', cost: 5.15, unit: 'burgers', minCost: 0.01 },
                    { name: 'Starbucks Lattes', icon: '‚òï', cost: 4.45, unit: 'lattes', minCost: 0.01 },
                    { name: 'Movie Tickets', icon: 'üé¨', cost: 12, unit: 'tickets', minCost: 10 },
                    { name: 'Designer Jeans', icon: 'üëñ', cost: 120, unit: 'pairs', minCost: 100 },
                    { name: 'Roundtrip Flights', icon: '‚úàÔ∏è', cost: 350, unit: 'flights', minCost: 1000 },
                    { name: 'iPhone 15 Pro', icon: 'üì±', cost: 999, unit: 'phones', minCost: 1000 },
                    { name: 'Tesla Model 3', icon: 'üöó', cost: 40000, unit: 'cars', minCost: 40000 },
                    { name: 'Luxury Vacation', icon: 'üèñÔ∏è', cost: 5000, unit: 'trips', minCost: 5000 }
                ],

                calculate() {
                    // Calculate hourly rate (assuming 2080 work hours/year)
                    this.hourlyRate = this.salary / 2080;

                    // Calculate total hours spent
                    this.totalHours = parseFloat(this.hours) + (parseFloat(this.minutes) / 60);

                    // Calculate activity cost
                    this.activityCost = this.totalHours * this.hourlyRate;

                    // Adjust for frequency
                    let multiplier = 1;
                    let frequencyText = '';

                    switch (this.frequency) {
                        case 'daily':
                            multiplier = 365;
                            frequencyText = 'Every day for a year';
                            break;
                        case 'weekly':
                            multiplier = 52;
                            frequencyText = 'Every week for a year';
                            break;
                        case 'monthly':
                            multiplier = 12;
                            frequencyText = 'Every month for a year';
                            break;
                        case 'yearly':
                            multiplier = 1;
                            frequencyText = 'Every year';
                            break;
                        default: // once
                            multiplier = 1;
                            frequencyText = 'One time activity';
                    }

                    this.activityCost *= multiplier;
                    this.frequencyText = frequencyText;

                    // Check for achievements
                    this.showAchievement = false;
                    if (this.activityCost > 10000) {
                        this.showAchievement = true;
                        this.achievementIcon = 'üí∞';
                        this.achievementTitle = 'Time Millionaire';
                        this.achievementDescription = 'Your time is worth over $10,000!';
                    } else if (this.frequency === 'daily' && this.totalHours >= 4) {
                        this.showAchievement = true;
                        this.achievementIcon = '‚è∞';
                        this.achievementTitle = 'Time Investment Expert';
                        this.achievementDescription = 'You spend 4+ hours daily on this activity!';
                    } else if (this.hourlyRate > 100) {
                        this.showAchievement = true;
                        this.achievementIcon = 'üíé';
                        this.achievementTitle = 'High-Value Time';
                        this.achievementDescription = 'Your time is worth over $100/hour!';
                    }

                    this.results = true;
                },

                formatCurrency(amount) {
                    return '$' + amount.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                }
            }));
        });
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
            const navLinks = document.querySelector('.nav-links');

            if (mobileMenuBtn && navLinks) {
                mobileMenuBtn.addEventListener('click', function () {
                    navLinks.classList.toggle('active');
                    mobileMenuBtn.classList.toggle('active');
                });
                document.addEventListener('click', function (event) {
                    if (!event.target.closest('.main-nav')) {
                        navLinks.classList.remove('active');
                        mobileMenuBtn.classList.remove('active');
                    }
                });
            }
        });
    </script>
