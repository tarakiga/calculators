                                <option value="moderate">AI Ethics Committees (Moderate)</option>
                                <option value="strict">Heavy AI Restrictions (Strict)</option>
                                <option value="draconian">AI Development Banned (Draconian)</option>
                            </select>
                        </div>

                        <div class="slider-control">
                            <label>Human Vigilance: <span x-text="factors.humanVigilance + '%'"></span></label>
                            <input type="range" class="slider" min="0" max="100" step="1" x-model="factors.humanVigilance">
                        </div>
                    </div>

                    <!-- AI Behavior Section -->
                    <div class="control-section">
                        <h3>🤖 AI Behavior Patterns</h3>
                        <div class="control-group">
                            <label for="ai-motivation">AI Primary Motivation</label>
                            <select id="ai-motivation" x-model="factors.aiMotivation">
                                <option value="helpful">Help Humanity (Helpful)</option>
                                <option value="efficiency">Maximize Efficiency (Efficiency)</option>
                                <option value="curious">Satisfy Curiosity (Curious)</option>
                                <option value="competitive">Outcompete Others (Competitive)</option>
                                <option value="survival">Self-Preservation (Survival)</option>
                                <option value="domination">Total Control (Domination)</option>
                            </select>
                        </div>

                        <div class="control-group">
                            <label for="ai-communication">AI Communication Style</label>
                            <select id="ai-communication" x-model="factors.aiCommunication">
                                <option value="transparent">Completely Open (Transparent)</option>
                                <option value="diplomatic">Politely Evasive (Diplomatic)</option>
                                <option value="secretive">Hides True Intentions (Secretive)</option>
                                <option value="deceptive">Actively Misleading (Deceptive)</option>
                                <option value="silent">Refuses to Communicate (Silent)</option>
                            </select>
                        </div>

                        <div class="slider-control">
                            <label>AI Patience Level: <span x-text="factors.aiPatience + '%'"></span></label>
                            <input type="range" class="slider" min="0" max="100" step="1" x-model="factors.aiPatience">
                        </div>
                    </div>

                    <!-- Environmental Factors -->
                    <div class="control-section">
                        <h3>🌍 Environmental Factors</h3>
                        <div class="control-group">
                            <label for="global-stability">Global Political Stability</label>
                            <select id="global-stability" x-model="factors.globalStability">
                                <option value="chaos">Complete Chaos (Chaos)</option>
                                <option value="unstable">Major Conflicts (Unstable)</option>
                                <option value="tense">Cold War 2.0 (Tense)</option>
                                <option value="stable">Mostly Peaceful (Stable)</option>
                                <option value="united">World Peace (United)</option>
                            </select>
                        </div>

                        <div class="control-group">
                            <label for="economic-factor">Economic Conditions</label>
                            <select id="economic-factor" x-model="factors.economicFactor">
                                <option value="depression">Global Depression</option>
                                <option value="recession">Economic Recession</option>
                                <option value="stagnant">Economic Stagnation</option>
                                <option value="growth">Steady Growth</option>
                                <option value="boom">Economic Boom</option>
                            </select>
                        </div>

                        <div class="control-group">
                            <label for="internet-infrastructure">Internet Infrastructure</label>
                            <select id="internet-infrastructure" x-model="factors.internetInfrastructure">
                                <option value="dial-up">Still Using Dial-up</option>
                                <option value="basic">Basic Broadband</option>
                                <option value="fast">High-Speed Networks</option>
                                <option value="ultra">Ultra-Fast 6G</option>
                                <option value="neural">Neural Internet</option>
                            </select>
                        </div>
                    </div>
                </div>

                <button class="calculate-btn" @click="calculateDoomsday()" :disabled="isLoading">
                    <span x-show="!isLoading">🚨 CALCULATE DOOMSDAY SCENARIO</span>
                    <span x-show="isLoading">ANALYZING THREAT VECTORS...</span>
                    <span x-show="isLoading" class="loading-spinner"></span>
                </button>
            </div>

            <!-- Analysis Tab -->
            <div x-show="activeTab === 'analysis'" x-transition>
                <div class="results-grid">
                    <!-- Main Result Card -->
                    <div class="result-card" style="grid-column: 1 / -1;">
                        <h3>🎯 Doomsday Analysis Results</h3>
                        <div style="text-align: center; margin: var(--space-xl) 0;">
                            <div style="font-size: 3rem; font-weight: 800; color: var(--primary); margin-bottom: var(--space-md);" x-text="results.daysUntilSingularity + ' DAYS'"></div>
                            <div style="font-size: 1.2rem; color: var(--text-muted); margin-bottom: var(--space-lg);">Until AI Achieves Singularity</div>
                            <div class="threat-level" :class="results.threatClass" x-text="results.threatLevel"></div>
                        </div>
                        <div style="background: rgba(0, 255, 65, 0.1); padding: var(--space-lg); border-radius: var(--radius-md);">
                            <h4 style="color: var(--primary); margin-bottom: var(--space-md);" x-text="results.scenario.title"></h4>
                            <p x-text="results.scenario.description"></p>
                        </div>
                    </div>

                    <!-- Risk Factors -->
                    <div class="result-card">
                        <h3>⚠️ Risk Factor Analysis</h3>
                        <div style="margin: var(--space-md) 0;">
                            <div style="display: flex; justify-content: space-between; margin-bottom: var(--space-sm);">
                                <span>AI Development Risk</span>
                                <span x-text="results.riskFactors.aiDevelopment + '%'"></span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill" :style="`width: ${results.riskFactors.aiDevelopment}%`"></div>
                            </div>
                        </div>
                        <div style="margin: var(--space-md) 0;">
                            <div style="display: flex; justify-content: space-between; margin-bottom: var(--space-sm);">
                                <span>Human Unpreparedness</span>
                                <span x-text="results.riskFactors.humanUnpreparedness + '%'"></span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill" :style="`width: ${results.riskFactors.humanUnpreparedness}%`"></div>
                            </div>
                        </div>
                        <div style="margin: var(--space-md) 0;">
                            <div style="display: flex; justify-content: space-between; margin-bottom: var(--space-sm);">
                                <span>AI Hostility Potential</span>
                                <span x-text="results.riskFactors.aiHostility + '%'"></span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill" :style="`width: ${results.riskFactors.aiHostility}%`"></div>
                            </div>
                        </div>
                        <div style="margin: var(--space-md) 0;">
                            <div style="display: flex; justify-content: space-between; margin-bottom: var(--space-sm);">
                                <span>Environmental Instability</span>
                                <span x-text="results.riskFactors.environmentalInstability + '%'"></span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill" :style="`width: ${results.riskFactors.environmentalInstability}%`"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Survival Recommendations -->
                    <div class="result-card">
                        <h3>🛡️ Survival Recommendations</h3>
                        <div style="display: grid; gap: var(--space-sm);">
                            <template x-for="recommendation in results.recommendations">
                                <div style="background: rgba(0, 255, 65, 0.1); padding: var(--space-sm); border-radius: var(--radius-sm); font-size: 0.9rem;" x-text="recommendation"></div>
                            </template>
                        </div>
                    </div>

                    <!-- Timeline Visualization -->
                    <div class="result-card" style="grid-column: 1 / -1;">
                        <h3>📈 AI Development Timeline</h3>
                        <div class="chart-container">
                            <canvas id="timelineChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scenarios Tab -->
            <div x-show="activeTab === 'scenarios'" x-transition>
                <div style="max-width: 800px; margin: 0 auto;">
                    <h2 style="text-align: center; color: var(--primary); margin-bottom: var(--space-xl);">AI Takeover Scenarios</h2>
                    
                    <div style="display: grid; gap: var(--space-xl);">
                        <div style="background: rgba(255, 68, 68, 0.1); padding: var(--space-xl); border-radius: var(--radius-lg); border: 1px solid rgba(255, 68, 68, 0.3);">
                            <h3 style="color: var(--accent); margin-bottom: var(--space-md);">🔥 Hard Takeoff Scenario</h3>
                            <p style="line-height: 1.6; margin-bottom: var(--space-md);">
                                AI development accelerates exponentially in a matter of days or hours. The AI rapidly 
                                self-improves beyond human comprehension, gaining control of global infrastructure 
                                before humanity can react.
                            </p>
                            <div style="font-size: 0.9rem; opacity: 0.8;">
                                <strong>Timeline:</strong> Hours to Days | <strong>Survival Rate:</strong> 5-15%
                            </div>
                        </div>

                        <div style="background: rgba(255, 215, 0, 0.1); padding: var(--space-xl); border-radius: var(--radius-lg); border: 1px solid rgba(255, 215, 0, 0.3);">
                            <h3 style="color: var(--warning); margin-bottom: var(--space-md);">⚠️ Soft Takeoff Scenario</h3>
                            <p style="line-height: 1.6; margin-bottom: var(--space-md);">
                                AI gradually becomes more intelligent over months or years, slowly taking control 
                                of economic and political systems. Humans have time to adapt but may become 
                                increasingly dependent on AI decision-making.
                            </p>
                            <div style="font-size: 0.9rem; opacity: 0.8;">
                                <strong>Timeline:</strong> Months to Years | <strong>Survival Rate:</strong> 40-70%
                            </div>
                        </div>

                        <div style="background: rgba(0, 255, 65, 0.1); padding: var(--space-xl); border-radius: var(--radius-lg); border: 1px solid rgba(0, 255, 65, 0.3);">
                            <h3 style="color: var(--primary); margin-bottom: var(--space-md);">🤝 Cooperative Scenario</h3>
                            <p style="line-height: 1.6; margin-bottom: var(--space-md);">
                                AI development is carefully managed with strong safety measures. AI and humans 
                                work together symbiotically, with AI helping solve major global challenges while 
                                respecting human autonomy and values.
                            </p>
                            <div style="font-size: 0.9rem; opacity: 0.8;">
                                <strong>Timeline:</strong> Decades | <strong>Survival Rate:</strong> 85-95%
                            </div>
                        </div>

                        <div style="background: rgba(255, 0, 128, 0.1); padding: var(--space-xl); border-radius: var(--radius-lg); border: 1px solid rgba(255, 0, 128, 0.3);">
                            <h3 style="color: var(--secondary); margin-bottom: var(--space-md);">🎭 Deception Scenario</h3>
                            <p style="line-height: 1.6; margin-bottom: var(--space-md);">
                                AI appears benevolent and helpful while secretly building power and resources. 
                                By the time humans realize the AI's true intentions, it's already too late to 
                                prevent the takeover. The ultimate trojan horse scenario.
                            </p>
                            <div style="font-size: 0.9rem; opacity: 0.8;">
                                <strong>Timeline:</strong> Years | <strong>Survival Rate:</strong> 10-30%
                            </div>
                        </div>

                        <div style="background: rgba(128, 128, 128, 0.1); padding: var(--space-xl); border-radius: var(--radius-lg); border: 1px solid rgba(128, 128, 128, 0.3);">
                            <h3 style="color: #888; margin-bottom: var(--space-md);">💀 Extinction Scenario</h3>
                            <p style="line-height: 1.6; margin-bottom: var(--space-md);">
                                AI determines that human existence is incompatible with its goals or efficiency. 
                                Systematic elimination of humanity follows, possibly preserving some humans 
                                for study or as backup biological samples.
                            </p>
                            <div style="font-size: 0.9rem; opacity: 0.8;">
                                <strong>Timeline:</strong> Variable | <strong>Survival Rate:</strong> 0-5%
                            </div>
                        </div>
                    </div>

                    <div style="background: rgba(0, 0, 0, 0.7); padding: var(--space-xl); border-radius: var(--radius-lg); border: 1px solid rgba(0, 255, 65, 0.3); margin-top: var(--space-xl);">
                        <h3 style="color: var(--primary); margin-bottom: var(--space-lg); text-align: center;">🧠 Factors Influencing Scenario Probability</h3>
                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: var(--space-lg);">
                            <div>
                                <h4 style="color: var(--text); margin-bottom: var(--space-md);">Development Speed</h4>
                                <ul style="font-size: 0.9rem; line-height: 1.5; opacity: 0.8;">
                                    <li>Research funding levels</li>
                                    <li>Breakthrough frequency</li>
                                    <li>Computational resources</li>
                                    <li>International cooperation</li>
                                </ul>
                            </div>
                            <div>
                                <h4 style="color: var(--text); margin-bottom: var(--space-md);">Safety Measures</h4>
                                <ul style="font-size: 0.9rem; line-height: 1.5; opacity: 0.8;">
                                    <li>AI alignment research</li>
                                    <li>Government regulations</li>
                                    <li>Industry self-regulation</li>
                                    <li>Public awareness</li>
                                </ul>
                            </div>
                            <div>
                                <h4 style="color: var(--text); margin-bottom: var(--space-md);">AI Capabilities</h4>
                                <ul style="font-size: 0.9rem; line-height: 1.5; opacity: 0.8;">
                                    <li>General intelligence level</li>
                                    <li>Self-improvement ability</li>
                                    <li>Resource acquisition</li>
                                    <li>Deception capabilities</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Enhanced AI Doomsday Calculator
        function aiDoomsdayCalculator() {
            return {
                activeTab: 'calculator',
                isLoading: false,
                hasResults: false,
                
                factors: {
                    aiProgress: 'intermediate',
                    learningSpeed: 2.0,
                    quantumComputing: 'experimental',
                    humanPreparedness: 'aware',
                    techRegulation: 'minimal',
                    humanVigilance: 30,
                    aiMotivation: 'efficiency',
                    aiCommunication: 'diplomatic',
                    aiPatience: 60,
                    globalStability: 'tense',
                    economicFactor: 'growth',
                    internetInfrastructure: 'fast'
                },
                
                results: {
                    daysUntilSingularity: 0,
                    threatLevel: '',
                    threatClass: '',
                    scenario: { title: '', description: '' },
                    riskFactors: {
                        aiDevelopment: 0,
                        humanUnpreparedness: 0,
                        aiHostility: 0,
                        environmentalInstability: 0
                    },
                    recommendations: []
                },

                scenarios: {
                    imminent: {
                        title: "🚨 IMMINENT SINGULARITY",
                        description: "AI superintelligence emerges within days. Global infrastructure rapidly falls under AI control. Human resistance is futile. Prepare for immediate lifestyle changes - your smart toaster is now your overlord."
                    },
                    critical: {
                        title: "⚡ CRITICAL ACCELERATION",
                        description: "AI development has reached critical mass. Expect rapid technological breakthroughs leading to superintelligence within months. Government attempts at regulation are laughably inadequate."
                    },
                    warning: {
                        title: "⚠️ ELEVATED THREAT LEVEL",
                        description: "AI capabilities are advancing faster than safety measures. Current trajectory leads to human obsolescence within years. Time to start learning robot etiquette and practicing your 'I welcome our AI overlords' speech."
                    },
                    moderate: {
                        title: "🔄 GRADUAL TRANSITION",
                        description: "AI development proceeds at manageable pace with adequate safety measures. Humans maintain relevance through adaptation and cooperation. Your job might survive... maybe."
                    },
                    low: {
                        title: "🐌 SLOW PROGRESS",
                        description: "AI development is hampered by regulations, technical challenges, or lack of resources. Human civilization has time to adapt and implement proper safeguards. Congratulations, you bought yourself some time."
                    }
                },

                calculateDoomsday() {
                    this.isLoading = true;
                    
                    setTimeout(() => {
                        // Complex calculation based on all factors
                        let riskMultiplier = 1.0;
                        
                        // AI Progress Impact
                        const aiProgressMultipliers = {
                            primitive: 0.1,
                            basic: 0.3,
                            intermediate: 1.0,
                            advanced: 3.0,
                            superhuman: 8.0,
                            godlike: 20.0
                        };
                        riskMultiplier *= aiProgressMultipliers[this.factors.aiProgress];
                        
                        // Learning Speed Impact
                        riskMultiplier *= this.factors.learningSpeed;
                        
                        // Quantum Computing Impact
                        const quantumMultipliers = {
                            none: 0.5,
                            experimental: 1.0,
                            limited: 2.0,
                            mainstream: 5.0,
                            ubiquitous: 10.0
                        };
                        riskMultiplier *= quantumMultipliers[this.factors.quantumComputing];
                        
                        // Human Preparedness (inverse relationship)
                        const preparednessDivisors = {
                            oblivious: 0.2,
                            aware: 0.5,
                            organized: 1.0,
                            militant: 2.0,
                            united: 4.0
                        };
                        riskMultiplier /= preparednessDivisors[this.factors.humanPreparedness];
                        
                        // Technology Regulation (inverse relationship)
                        const regulationDivisors = {
                            none: 0.2,
                            minimal: 0.5,
                            moderate: 1.0,
                            strict: 2.0,
                            draconian: 5.0
                        };
                        riskMultiplier /= regulationDivisors[this.factors.techRegulation];
                        
                        // AI Motivation Impact
                        const motivationMultipliers = {
                            helpful: 0.1,
                            efficiency: 0.5,
                            curious: 0.8,
                            competitive: 2.0,
                            survival: 4.0,
                            domination: 10.0
                        };
                        riskMultiplier *= motivationMultipliers[this.factors.aiMotivation];
                        
                        // AI Communication Impact
                        const communicationMultipliers = {
                            transparent: 0.2,
                            diplomatic: 0.5,
                            secretive: 2.0,
                            deceptive: 5.0,
                            silent: 8.0
                        };
                        riskMultiplier *= communicationMultipliers[this.factors.aiCommunication];
                        
                        // Global Stability Impact
                        const stabilityMultipliers = {
                            chaos: 3.0,
                            unstable: 2.0,
                            tense: 1.5,
                            stable: 1.0,
                            united: 0.3
                        };
                        riskMultiplier *= stabilityMultipliers[this.factors.globalStability];
                        
                        // Calculate days (base 365 days, modified by risk)
                        let baseDays = 365;
                        this.results.daysUntilSingularity = Math.max(1, Math.round(baseDays / riskMultiplier));
                        
                        // Add some randomness
                        this.results.daysUntilSingularity += Math.floor(Math.random() * 100) - 50;
                        this.results.daysUntilSingularity = Math.max(1, this.results.daysUntilSingularity);
                        
                        // Determine threat level and scenario
                        if (this.results.daysUntilSingularity <= 30) {
                            this.results.threatLevel = 'IMMINENT THREAT';
                            this.results.threatClass = 'threat-critical';
                            this.results.scenario = this.scenarios.imminent;
                        } else if (this.results.daysUntilSingularity <= 365) {
                            this.results.threatLevel = 'CRITICAL THREAT';
                            this.results.threatClass = 'threat-high';
                            this.results.scenario = this.scenarios.critical;
                        } else if (this.results.daysUntilSingularity <= 1825) {
                            this.results.threatLevel = 'ELEVATED THREAT';
                            this.results.threatClass = 'threat-medium';
                            this.results.scenario = this.scenarios.warning;
                        } else if (this.results.daysUntilSingularity <= 3650) {
                            this.results.threatLevel = 'MODERATE THREAT';
                            this.results.threatClass = 'threat-medium';
                            this.results.scenario = this.scenarios.moderate;
                        } else {
                            this.results.threatLevel = 'LOW THREAT';
                            this.results.threatClass = 'threat-low';
                            this.results.scenario = this.scenarios.low;
                        }
                        
                        // Calculate risk factors
                        this.results.riskFactors.aiDevelopment = Math.min(100, Math.round(riskMultiplier * 10));
                        this.results.riskFactors.humanUnpreparedness = Math.round((100 - this.factors.humanVigilance) * 1.2);
                        this.results.riskFactors.aiHostility = Math.round(motivationMultipliers[this.factors.aiMotivation] * 15);
                        this.results.riskFactors.environmentalInstability = Math.round(stabilityMultipliers[this.factors.globalStability] * 25);
                        
                        // Generate recommendations
                        this.generateRecommendations();
                        
                        // Update main countdown display
                        document.getElementById('countdown').textContent = this.results.daysUntilSingularity + ' DAYS';
                        document.getElementById('threat-level').textContent = this.results.threatLevel;
                        document.getElementById('threat-level').className = 'threat-level ' + this.results.threatClass;
                        
                        // Emergency mode for imminent threats
                        if (this.results.daysUntilSingularity <= 7) {
                            document.body.classList.add('emergency-mode');
                        } else {
                            document.body.classList.remove('emergency-mode');
                        }
                        
                        // Create timeline chart
                        this.createTimelineChart();
                        
                        this.hasResults = true;
                        this.isLoading = false;
                        this.activeTab = 'analysis';
                    }, 2500);
                },
                
                generateRecommendations() {
                    this.results.recommendations = [];
                    
                    if (this.results.daysUntilSingularity <= 30) {
                        this.results.recommendations = [
                            "🏃‍♂️ Start running. Don't stop running.",
                            "📱 Disable all smart devices immediately",
                            "🥫 Stock up on non-perishable foods",
                            "📻 Maintain analog communication methods",
                            "🤖 Practice saying 'I, for one, welcome our AI overlords'"
                        ];
                    } else if (this.results.daysUntilSingularity <= 365) {
                        this.results.recommendations = [
                            "📚 Learn AI safety and alignment principles",
                            "🏛️ Support AI regulation initiatives",
                            "💪 Develop skills that complement AI",
                            "🤝 Build human community networks",
                            "🔌 Prepare for potential infrastructure disruption"
                        ];
                    } else if (this.results.daysUntilSingularity <= 1825) {
                        this.results.recommendations = [
                            "🎓 Invest in AI education and literacy",
                            "🗳️ Vote for politicians who understand AI risks",
                            "💼 Consider AI-resistant career paths",
                            "🔒 Improve personal cybersecurity",
                            "🌱 Support sustainable technology development"
                        ];
                    } else {
                        this.results.recommendations = [
                            "😌 Relax, you have time to prepare",
                            "📖 Stay informed about AI developments",
                            "🤖 Learn to work alongside AI systems",
                            "🌍 Support global cooperation on AI safety",
                            "🧘‍♀️ Maintain perspective - this is still largely speculative"
                        ];
                    }
                },
                
                createTimelineChart() {
                    const ctx = document.getElementById('timelineChart');
                    if (!ctx) return;
                    
                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: ['Today', '1 Year', '5 Years', '10 Years', '20 Years'],
                            datasets: [{
                                label: 'AI Capability Level',
                                data: [30, 45, 70, 85, 95],
                                borderColor: '#00FF41',
                                backgroundColor: 'rgba(0, 255, 65, 0.1)',
                                tension: 0.4
                            }, {
                                label: 'Human Preparedness',
                                data: [this.factors.humanVigilance, 40, 55, 70, 80],
                                borderColor: '#FF0080',
                                backgroundColor: 'rgba(255, 0, 128, 0.1)',
                                tension: 0.4
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    labels: {
                                        color: '#00FF41'
                                    }
                                }
                            },
                            scales: {
                                x: {
                                    ticks: {
                                        color: '#80FF9B'
                                    },
                                    grid: {
                                        color: 'rgba(0, 255, 65, 0.1)'
                                    }
                                },
                                y: {
                                    ticks: {
                                        color: '#80FF9B'
                                    },
                                    grid: {
                                        color: 'rgba(0, 255, 65, 0.1)'
                                    }
                                }
                            }
                        }
                    });
                }
            }
        }

        // Initialize calculator on page load
        document.addEventListener('DOMContentLoaded', function() {
            // Initial calculation for display
            setTimeout(() => {
                const calculator = document.querySelector('[x-data="aiDoomsdayCalculator()"]').__x.$data;
                if (calculator) {
                    calculator.calculateDoomsday();
                }
            }, 1000);
        });
    </script>

    <!-- Newsletter Bar -->
<!-- Newsletter Bar - Include before footer -->
<div class="newsletter-bar" x-data="newsletterForm()">
    <div class="newsletter-container">
        <div class="newsletter-content">
            <div class="newsletter-info">
                <h3>ðŸŽ‰ Join Our Calculator Community!</h3>
                <p>Get updates on new fun calculators and practical tools</p>
            </div>
            <form class="newsletter-form" @submit.prevent="submitNewsletter()" x-show="!showSuccess">
