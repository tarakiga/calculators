    <canvas id="shareCanvas" width="1200" height="630"></canvas>
    
    <script>
        function beskarCalculator() {
            return {
                selectedBeskar: 'pure',
                selectedDamage: 'blaster',
                battleIntensity: 5,
                maintenanceFreq: 5,
                armorAge: 10,
                armorIntegrity: 0,
                survivalRate: 0,
                repairCost: 0,
                showShareMenu: false,
                
                beskarTypes: {
                    'pure': {
                        name: 'Pure Beskar',
                        purity: 99,
                        durability: 10,
                        color: '#c0c5ce',
                        rgb: '192, 197, 206',
                        clan: 'Traditional Mandalorian'
                    },
                    'alloyed': {
                        name: 'Beskar Alloy',
                        purity: 85,
                        durability: 8,
                        color: '#8b949e',
                        rgb: '139, 148, 158',
                        clan: 'Modern Forging'
                    },
                    'durasteel': {
                        name: 'Durasteel Mix',
                        purity: 60,
                        durability: 6,
                        color: '#6b7280',
                        rgb: '107, 114, 128',
                        clan: 'Death Watch Remnants'
                    },
                    'scrap': {
                        name: 'Scrap Metal',
                        purity: 30,
                        durability: 3,
                        color: '#4b5563',
                        rgb: '75, 85, 99',
                        clan: 'Outer Rim Survivors'
                    }
                },
                
                damageTypes: {
                    'blaster': {
                        name: 'Blaster Fire',
                        emoji: '🔫',
                        color: '#dc2626',
                        rgb: '220, 38, 38',
                        weakness: 'Energy dispersion, deflection',
                        strength: 'Sustained heavy fire'
                    },
                    'lightsaber': {
                        name: 'Lightsaber',
                        emoji: '⚔️',
                        color: '#8b5cf6',
                        rgb: '139, 92, 246',
                        weakness: 'Pure beskar resistance',
                        strength: 'Precise cutting attacks'
                    },
                    'vibroblade': {
                        name: 'Vibroblade',
                        emoji: '🗡️',
                        color: '#0891b2',
                        rgb: '8, 145, 178',
                        weakness: 'Armor thickness',
                        strength: 'Joint vulnerabilities'
                    },
                    'explosives': {
                        name: 'Explosives',
                        emoji: '💥',
                        color: '#ea580c',
                        rgb: '234, 88, 12',
                        weakness: 'Distributed impact',
                        strength: 'Concussive force'
                    }
                },
                
                init() {
                    this.calculateDurability();
                },
                
                selectBeskar(key) {
                    this.selectedBeskar = key;
                    this.calculateDurability();
                },
                
                selectDamage(key) {
                    this.selectedDamage = key;
                    this.calculateDurability();
                },
                
                calculateDurability() {
                    const beskar = this.beskarTypes[this.selectedBeskar];
                    const damage = this.damageTypes[this.selectedDamage];
                    
                    // Base integrity from beskar quality
                    let integrity = beskar.durability * 10;
                    
                    // Battle intensity impact (more intense = more wear)
                    const intensityFactor = 1 - ((this.battleIntensity - 1) * 0.08);
                    integrity *= intensityFactor;
                    
                    // Maintenance frequency bonus
                    const maintenanceBonus = 1 + ((this.maintenanceFreq - 5) * 0.04);
                    integrity *= maintenanceBonus;
                    
                    // Age degradation
                    const ageFactor = 1 - (this.armorAge * 0.008);
                    integrity *= Math.max(0.2, ageFactor);
                    
                    // Damage type modifier
                    const damageModifiers = {
                        'blaster': 1.0,
                        'lightsaber': beskar.purity >= 90 ? 0.9 : 0.6,
                        'vibroblade': 0.8,
                        'explosives': 0.7
                    };
                    integrity *= damageModifiers[this.selectedDamage] || 1.0;
                    
                    this.armorIntegrity = Math.round(Math.max(5, Math.min(100, integrity)));
                    
                    // Calculate survival rate
                    this.survivalRate = Math.round(Math.min(99, this.armorIntegrity * 0.9 + (beskar.durability * 2)));
                    
                    // Calculate repair cost
                    const baseCost = (100 - this.armorIntegrity) * 100;
                    const purityMultiplier = beskar.purity / 50;
                    this.repairCost = Math.round(baseCost * purityMultiplier);
                },
                
                getIntensityDescription(intensity) {
                    const descriptions = {
                        1: 'Ceremonial duties',
                        2: 'Peaceful patrols',
                        3: 'Standard bounties',
                        4: 'Dangerous targets',
                        5: 'Combat missions',
                        6: 'High-risk operations',
                        7: 'War zone deployment',
                        8: 'Siege warfare',
                        9: 'Against Jedi',
                        10: 'Great Purge survival'
                    };
                    return descriptions[intensity] || 'Unknown threat level';
                },
                
                getMaintenanceDescription(freq) {
                    const descriptions = {
                        1: 'Never maintained',
                        2: 'Rarely cleaned',
                        3: 'Basic upkeep',
                        4: 'Occasional repairs',
                        5: 'Standard maintenance',
                        6: 'Regular servicing',
                        7: 'Professional care',
                        8: 'Armorer visits',
                        9: 'Master craftsman',
                        10: 'Forge-temple quality'
                    };
                    return descriptions[freq] || 'Unknown maintenance';
                },
                
                getIntegrityColor(integrity) {
                    if (integrity >= 80) return '#10b981'; // Green
                    if (integrity >= 60) return '#f59e0b'; // Yellow
                    if (integrity >= 40) return '#ea580c'; // Orange
                    return '#dc2626'; // Red
                },

                toggleShareMenu() {
                    this.showShareMenu = !this.showShareMenu;
                },

                generateShareText() {
                    const beskar = this.beskarTypes[this.selectedBeskar];
                    return `🛡️ Beskar Armor Analysis: ${beskar.name} = ${this.armorIntegrity}% integrity, ${this.survivalRate}% survival rate! This is the Way 🔥 Calculate yours at docket.one`;
                },

                generateShareImage() {
                    const canvas = document.getElementById('shareCanvas');
                    const ctx = canvas.getContext('2d');
                    
                    canvas.width = 1200;
                    canvas.height = 630;
                    
                    // Gradient background
                    const gradient = ctx.createLinearGradient(0, 0, canvas.width, canvas.height);
                    gradient.addColorStop(0, '#0a0a0f');
                    gradient.addColorStop(0.3, '#1a1a2e');
                    gradient.addColorStop(0.7, '#1a1a2e');
                    gradient.addColorStop(1, '#0a0a0f');
                    ctx.fillStyle = gradient;
                    ctx.fillRect(0, 0, canvas.width, canvas.height);
                    
                    // Stars
                    ctx.fillStyle = '#ffffff';
                    for (let i = 0; i < 150; i++) {
                        const x = Math.random() * canvas.width;
                        const y = Math.random() * canvas.height;
                        const size = Math.random() * 2 + 0.5;
                        ctx.beginPath();
                        ctx.arc(x, y, size, 0, 2 * Math.PI);
                        ctx.fill();
                    }
                    
                    // Title
                    ctx.fillStyle = '#c0c5ce';
                    ctx.font = 'bold 42px Inter, sans-serif';
                    ctx.textAlign = 'center';
                    ctx.fillText('MANDALORIAN BESKAR ARMOR ANALYSIS', canvas.width / 2, 80);
                    
                    // Main result
                    ctx.fillStyle = '#fb8500';
                    ctx.font = 'bold 64px Inter, sans-serif';
                    ctx.fillText(`${this.armorIntegrity}% INTEGRITY`, canvas.width / 2, 180);
                    
                    // Beskar type
                    const beskar = this.beskarTypes[this.selectedBeskar];
                    ctx.fillStyle = beskar.color;
                    ctx.font = 'bold 32px Inter, sans-serif';
                    ctx.fillText(beskar.name, canvas.width / 2, 240);
                    
                    // Left Column
                    const leftX = 200;
                    ctx.fillStyle = '#e2e8f0';
                    ctx.font = 'bold 24px Inter, sans-serif';
                    ctx.textAlign = 'left';
                    ctx.fillText('🛡️ SURVIVAL RATE', leftX, 320);
                    ctx.fillText(`${this.survivalRate}%`, leftX, 350);
                    
                    ctx.fillText('💰 REPAIR COST', leftX, 410);
                    ctx.fillText(`${this.repairCost.toLocaleString()} credits`, leftX, 440);
                    
                    ctx.fillText('⚔️ BATTLE INTENSITY', leftX, 500);
                    ctx.fillText(`${this.battleIntensity}/10`, leftX, 530);
                    
                    // Right Column
                    const rightX = 700;
                    const damage = this.damageTypes[this.selectedDamage];
                    ctx.fillText('💥 PRIMARY THREAT', rightX, 320);
                    ctx.fillText(damage.name, rightX, 350);
                    
                    ctx.fillText('🔧 MAINTENANCE', rightX, 410);
                    ctx.fillText(`${this.maintenanceFreq}/10`, rightX, 440);
                    
                    ctx.fillText('⏳ ARMOR AGE', rightX, 500);
                    ctx.fillText(`${this.armorAge} years`, rightX, 530);
                    
                    // Footer
                    ctx.fillStyle = '#fb8500';
                    ctx.font = '20px Inter, sans-serif';
                    ctx.textAlign = 'center';
                    ctx.fillText('docket.one/pages/GeekGalaxy/Mandalorian%20Beskar%20Armor%20Calculator', canvas.width / 2, 590);
                    
                    return canvas.toDataURL('image/png');
                },

                async shareGeneral() {
                    const text = this.generateShareText();
                    const calculatorUrl = 'https://docket.one/pages/GeekGalaxy/Mandalorian%20Beskar%20Armor%20Calculator.html';
                    
                    // Check if we're running locally
                    const isLocal = window.location.protocol === 'file:';
                    
                    if (isLocal) {
                        // For local files, just copy text and download image
                        try {
                            if (navigator.clipboard && navigator.clipboard.writeText) {
                                await navigator.clipboard.writeText(`${text} ${calculatorUrl}`);
                                alert('✅ Share text copied to clipboard!\n\nImage will download separately.');
                            } else {
                                // Fallback for older browsers
                                const textArea = document.createElement('textarea');
                                textArea.value = `${text} ${calculatorUrl}`;
                                document.body.appendChild(textArea);
                                textArea.select();
                                document.execCommand('copy');
                                document.body.removeChild(textArea);
                                alert('✅ Share text copied to clipboard!\n\nImage will download separately.');
                            }
                            this.downloadImage();
                        } catch (err) {
                            console.warn('Clipboard failed, downloading image only:', err);
                            this.downloadImage();
                            alert('📥 Image downloaded! Share text:\n\n' + text + '\n\n' + calculatorUrl);
                        }
                        this.showShareMenu = false;
                        return;
                    }
                    
                    // Web Share API for mobile (HTTPS only)
                    if (navigator.share) {
                        try {
                            const imageDataUrl = this.generateShareImage();
                            const response = await fetch(imageDataUrl);
                            const blob = await response.blob();
                            const file = new File([blob], `beskar-armor-${Date.now()}.png`, { type: 'image/png' });
                            
                            if (navigator.canShare && navigator.canShare({ files: [file] })) {
                                await navigator.share({
                                    title: 'Beskar Armor Analysis - Results',
                                    text: text,
                                    url: calculatorUrl,
                                    files: [file]
                                });
                            } else {
                                await navigator.share({
                                    title: 'Beskar Armor Calculator',
                                    text: text,
                                    url: calculatorUrl
                                });
                            }
                            this.showShareMenu = false;
                            return;
                        } catch (err) {
                            if (err.name !== 'AbortError') {
                                console.log('Web Share API failed:', err);
                            } else {
                                this.showShareMenu = false;
                                return;
                            }
                        }
                    }
                    
                    // Fallback for desktop
                    try {
                        await navigator.clipboard.writeText(`${text} ${calculatorUrl}`);
                        alert('✅ Results copied to clipboard!\n\nThe image has been downloaded for you to attach.');
                        this.downloadImage();
                    } catch (err) {
                        console.error('Clipboard failed:', err);
                        this.downloadImage();
                        alert('📥 Image downloaded! Share text:\n\n' + text + '\n\n' + calculatorUrl);
                    }
                    this.showShareMenu = false;
                },

                async shareOnTwitter() {
                    const text = this.generateShareText();
                    const calculatorUrl = 'https://docket.one/pages/GeekGalaxy/Mandalorian%20Beskar%20Armor%20Calculator.html';
                    const twitterUrl = `https://twitter.com/intent/tweet?text=${encodeURIComponent(text)}&url=${encodeURIComponent(calculatorUrl)}`;
                    window.open(twitterUrl, '_blank');
                    this.showShareMenu = false;
                },

                async shareOnFacebook() {
                    const calculatorUrl = 'https://docket.one/pages/GeekGalaxy/Mandalorian%20Beskar%20Armor%20Calculator.html';
                    const facebookUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(calculatorUrl)}`;
                    window.open(facebookUrl, '_blank');
                    this.showShareMenu = false;
                },

                async shareOnLinkedIn() {
                    const calculatorUrl = 'https://docket.one/pages/GeekGalaxy/Mandalorian%20Beskar%20Armor%20Calculator.html';
                    const linkedInUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(calculatorUrl)}`;
                    window.open(linkedInUrl, '_blank');
                    this.showShareMenu = false;
                },

                async shareOnReddit() {
                    const text = this.generateShareText();
                    const calculatorUrl = 'https://docket.one/pages/GeekGalaxy/Mandalorian%20Beskar%20Armor%20Calculator.html';
                    const redditUrl = `https://reddit.com/submit?url=${encodeURIComponent(calculatorUrl)}&title=${encodeURIComponent(text)}`;
                    window.open(redditUrl, '_blank');
                    this.showShareMenu = false;
                },

                async copyShareLink() {
                    const calculatorUrl = 'https://docket.one/pages/GeekGalaxy/Mandalorian%20Beskar%20Armor%20Calculator.html';
                    try {
                        await navigator.clipboard.writeText(calculatorUrl);
                        const button = document.querySelector('.share-button');
                        const originalText = button.innerHTML;
                        button.innerHTML = '<span>✅</span><span>Link Copied!</span>';
                        setTimeout(() => {
                            button.innerHTML = originalText;
                        }, 2000);
                    } catch (err) {
                        console.error('Failed to copy link:', err);
                    }
                    this.showShareMenu = false;
                },

                downloadImage() {
                    const imageDataUrl = this.generateShareImage();
                    const link = document.createElement('a');
                    link.download = `beskar-armor-${Date.now()}.png`;
                    link.href = imageDataUrl;
                    link.click();
                    this.showShareMenu = false;
                }
            }
        }
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
            const navLinks = document.querySelector('.nav-links');
            
            if (mobileMenuBtn && navLinks) {
                mobileMenuBtn.addEventListener('click', function() {
                    navLinks.classList.toggle('active');
                    mobileMenuBtn.classList.toggle('active');
                });
                
                document.addEventListener('click', function(event) {
                    if (!event.target.closest('.main-nav')) {
                        navLinks.classList.remove('active');
                        mobileMenuBtn.classList.remove('active');
                    }
                    
                    // Close share menu when clicking outside
                    if (!event.target.closest('.share-dropdown')) {
                        const shareMenus = document.querySelectorAll('.share-menu');
                        shareMenus.forEach(menu => menu.classList.remove('active'));
                    }
                });
            }
        });
    </script>

