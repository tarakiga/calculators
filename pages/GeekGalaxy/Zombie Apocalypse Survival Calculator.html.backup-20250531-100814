                <div x-show="results" x-transition class="space-y-6">
                    <div class="bg-gray-700 p-6 rounded-lg border-l-4" :class="survivalClass">
                        <h3 class="text-xl font-bold mb-2 text-center" x-text="survivalTitle"></h3>
