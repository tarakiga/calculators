    <script src="../../common/navbar-enhanced.js"></script>
    <script>
        function calculator() {
            return {
                activeTab: 'calculator',
                calculated: false,
                
                carPrice: 28000,
                loanTerm: 5,
                interestRate: 5.5,
                insurance: 1200,
                maintenance: 1000,
                fuelCost: 0.12,
                milesDriven: 12000,
                
                uberCostPerRide: 15,
                ridesPerWeek: 8,
                
                totalAnnualCarCost: 0,
                totalAnnualUberCost: 0,
                annualSavings: 0,
                totalSavings: 0,
                carWins: false,
                
                costChart: null,
                
                calculate() {
                    this.calculateCarCosts();
                    this.calculateUberCosts();
                    this.calculateComparison();
                    
                    this.calculated = true;
                    this.activeTab = 'results';
                    
                    setTimeout(() => {
                        this.createChart();
                    }, 100);
                },
                
                calculateCarCosts() {
                    const monthlyInterestRate = this.interestRate / 100 / 12;
                    const numberOfPayments = this.loanTerm * 12;
                    
                    let monthlyPayment = 0;
                    if (this.carPrice > 0 && monthlyInterestRate > 0) {
                        monthlyPayment = this.carPrice * 
                            (monthlyInterestRate * Math.pow(1 + monthlyInterestRate, numberOfPayments)) / 
                            (Math.pow(1 + monthlyInterestRate, numberOfPayments) - 1);
                    }
                    
                    const annualLoanCost = monthlyPayment * 12;
                    const annualFuelCost = this.fuelCost * this.milesDriven;
                    
                    this.totalAnnualCarCost = annualLoanCost + 
                                           parseFloat(this.insurance) + 
                                           parseFloat(this.maintenance) + 
                                           annualFuelCost;
                },
                
                calculateUberCosts() {
                    this.totalAnnualUberCost = this.uberCostPerRide * this.ridesPerWeek * 52;
                },
                
                calculateComparison() {
                    this.annualSavings = this.totalAnnualUberCost - this.totalAnnualCarCost;
                    this.totalSavings = this.annualSavings * 5;
                    this.carWins = this.totalAnnualCarCost < this.totalAnnualUberCost;
                },
                
                createChart() {
                    const ctx = document.getElementById('costChart');
                    if (!ctx) return;
                    
                    if (this.costChart) {
                        this.costChart.destroy();
                    }
                    
                    this.costChart = new Chart(ctx, {
                        type: 'doughnut',
                        data: {
                            labels: ['Car Ownership', 'Rideshare'],
                            datasets: [{
                                data: [this.totalAnnualCarCost, this.totalAnnualUberCost],
                                backgroundColor: ['#0ea5e9', '#10b981'],
                                borderWidth: 2,
                                borderColor: '#ffffff'
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    position: 'bottom',
                                    labels: {
                                        font: { family: 'Inter' },
                                        padding: 20
                                    }
                                }
