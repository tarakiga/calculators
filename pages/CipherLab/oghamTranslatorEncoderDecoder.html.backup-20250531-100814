    <script>
        document.addEventListener('alpine:init', () => {
            Alpine.data('oghamTranslator', () => ({
                mode: 'encode',
                inputText: '',
                outputText: '',
                
                oghamChars: [
                    { latin: 'A', ogham: '·öê', name: 'Ailm (Elm)' },
                    { latin: 'B', ogham: '·öÅ', name: 'Beith (Birch)' },
                    { latin: 'C', ogham: '·öÇ', name: 'Coll (Hazel)' },
                    { latin: 'D', ogham: '·öÉ', name: 'Duir (Oak)' },
                    { latin: 'E', ogham: '·öÑ', name: 'Eadha (Aspen)' },
                    { latin: 'F', ogham: '·öÖ', name: 'Fearn (Alder)' },
                    { latin: 'G', ogham: '·öÜ', name: 'Gort (Ivy)' },
                    { latin: 'H', ogham: '·öá', name: 'Huathe (Hawthorn)' },
                    { latin: 'I', ogham: '·öà', name: 'Ioho (Yew)' },
                    { latin: 'L', ogham: '·öä', name: 'Luis (Rowan)' },
                    { latin: 'M', ogham: '·öã', name: 'Muin (Vine)' },
                    { latin: 'N', ogham: '·öå', name: 'Nion (Ash)' },
                    { latin: 'O', ogham: '·öç', name: 'Onn (Furze)' },
                    { latin: 'P', ogham: '·öé', name: 'Peith (Downy Birch)' },
                    { latin: 'Q', ogham: '·öè', name: 'Queirt (Apple)' },
                    { latin: 'R', ogham: '·öê', name: 'Ruis (Elder)' },
                    { latin: 'S', ogham: '·öë', name: 'Saille (Willow)' },
                    { latin: 'T', ogham: '·öí', name: 'Tinne (Holly)' },
                    { latin: 'U', ogham: '·öì', name: 'Ur (Heather)' },
                    { latin: 'Z', ogham: '·öó', name: 'Straif (Blackthorn)' }
                ],
                
                oghamToLatin: {},
                
                init() {
                    this.oghamChars.forEach(char => {
                        this.oghamToLatin[char.ogham] = char.latin;
                    });
                    this.inputText = 'HELLO IRELAND';
                    this.translate();
                },
                
                translate() {
                    if (!this.inputText.trim()) {
                        this.outputText = '';
                        return;
                    }
                    
                    if (this.mode === 'encode') {
                        this.encodeToOgham();
                    } else {
                        this.decodeFromOgham();
                    }
                },
                
                encodeToOgham() {
                    let result = '';
                    const text = this.inputText.toUpperCase();
                    
                    for (const char of text) {
                        if (char === ' ') {
                            result += ' ';
                        } else {
                            const oghamChar = this.oghamChars.find(c => c.latin === char);
                            result += oghamChar ? oghamChar.ogham : char;
                        }
                    }
                    
                    this.outputText = result;
                },
                
                decodeFromOgham() {
                    let result = '';
                    
                    for (const char of this.inputText) {
                        if (char === ' ') {
                            result += ' ';
                        } else {
                            result += this.oghamToLatin[char] || char;
                        }
                    }
                    
                    this.outputText = result;
                },
                
                insertChar(char) {
                    if (this.mode === 'encode') {
                        this.inputText += char.latin;
                    } else {
                        this.inputText += char.ogham;
                    }
                    this.translate();
                },
                
                copyResult() {
                    navigator.clipboard.writeText(this.outputText).then(() => {
                        const button = event.currentTarget;
                        const originalText = button.innerHTML;
                        button.innerHTML = '‚úÖ Copied!';
                        button.style.background = 'var(--secondary)';
                        
                        setTimeout(() => {
                            button.innerHTML = originalText;
                            button.style.background = 'var(--primary)';
                        }, 2000);
                    }).catch(() => {
                        alert('Failed to copy to clipboard');
                    });
                },
                
                clearAll() {
                    this.inputText = '';
                    this.outputText = '';
                },
                
                async exportToPDF() {
                    if (!this.outputText) return;
                    
                    try {
                        const { jsPDF } = window.jspdf;
                        const pdf = new jsPDF();
                        
                        pdf.setFontSize(20);
                        pdf.setFont('helvetica', 'bold');
                        pdf.text('Ogham Translation', 20, 30);
                        
                        pdf.setFontSize(12);
                        pdf.setFont('helvetica', 'normal');
                        pdf.text('Ancient Irish Script Translation', 20, 40);
                        
                        pdf.setFontSize(14);
                        pdf.setFont('helvetica', 'bold');
                        pdf.text('Original Text:', 20, 60);
                        pdf.setFont('helvetica', 'normal');
                        pdf.text(this.inputText, 20, 70);
                        
                        pdf.setFont('helvetica', 'bold');
                        pdf.text('Ogham Translation:', 20, 90);
                        pdf.setFontSize(18);
                        pdf.setFont('helvetica', 'normal');
                        pdf.text(this.outputText, 20, 105);
                        
                        pdf.setFontSize(10);
                        pdf.setFont('helvetica', 'italic');
                        pdf.text('Ogham is an ancient Irish alphabet used from the 4th to 6th centuries CE.', 20, 130);
                        pdf.text('The script was carved along stone edges, typically reading bottom to top.', 20, 140);
                        
                        pdf.setFont('helvetica', 'normal');
                        pdf.text('Generated by CipherLab - Docket One', 20, 280);
                        pdf.text(new Date().toLocaleDateString(), 20, 290);
                        
                        pdf.save('ogham-translation.pdf');
                        
                        const button = event.currentTarget;
                        const originalText = button.innerHTML;
                        button.innerHTML = '‚úÖ PDF Saved!';
                        setTimeout(() => {
                            button.innerHTML = originalText;
                        }, 2000);
                        
                    } catch (error) {
                        console.error('PDF export failed:', error);
                        alert('Failed to export PDF. Please try again.');
                    }
                },
                
                async exportToImage() {
                    if (!this.outputText) return;
                    
                    try {
                        const canvas = document.createElement('canvas');
                        const ctx = canvas.getContext('2d');
                        
                        canvas.width = 800;
                        canvas.height = 500;
                        
                        const gradient = ctx.createLinearGradient(0, 0, canvas.width, canvas.height);
                        gradient.addColorStop(0, '#f5f5f0');
                        gradient.addColorStop(1, '#e8e8e0');
                        ctx.fillStyle = gradient;
                        ctx.fillRect(0, 0, canvas.width, canvas.height);
                        
                        ctx.strokeStyle = '#cd7f32';
                        ctx.lineWidth = 6;
                        ctx.strokeRect(20, 20, canvas.width - 40, canvas.height - 40);
                        
                        ctx.fillStyle = '#cd7f32';
                        ctx.font = 'bold 28px serif';
                        ctx.textAlign = 'center';
                        ctx.fillText('Ogham Translation', canvas.width / 2, 70);
                        
                        ctx.font = '16px serif';
                        ctx.fillStyle = '#666';
                        ctx.fillText('Ancient Irish Script (4th-6th Century CE)', canvas.width / 2, 95);
                        
                        ctx.fillStyle = '#333';
                        ctx.font = 'bold 18px serif';
                        ctx.textAlign = 'left';
                        ctx.fillText('Original:', 50, 150);
                        ctx.font = '16px serif';
                        ctx.fillText(this.inputText, 50, 175);
                        
                        ctx.fillStyle = '#cd7f32';
                        ctx.font = 'bold 32px serif';
                        ctx.textAlign = 'center';
                        ctx.fillText(this.outputText, canvas.width / 2, 250);
                        
                        ctx.fillStyle = '#333';
                        ctx.font = 'bold 18px serif';
                        ctx.textAlign = 'left';
                        ctx.fillText('Translation:', 50, 300);
                        ctx.font = '16px serif';
                        ctx.fillText(this.mode === 'encode' ? 'Latin to Ogham' : 'Ogham to Latin', 50, 325);
                        
                        ctx.fillStyle = '#666';
                        ctx.font = 'italic 12px serif';
                        ctx.textAlign = 'center';
                        ctx.fillText('Ogham stones were territorial markers and memorials in ancient Ireland', canvas.width / 2, 380);
                        
                        ctx.fillStyle = '#999';
                        ctx.font = '12px serif';
                        ctx.fillText('Generated by CipherLab - Docket One', canvas.width / 2, 420);
                        ctx.fillText(new Date().toLocaleDateString(), canvas.width / 2, 440);
                        
                        const link = document.createElement('a');
                        link.download = 'ogham-translation.png';
                        link.href = canvas.toDataURL('image/png');
                        document.body.appendChild(link);
                        link.click();
                        document.body.removeChild(link);
                        
                        const button = event.currentTarget;
                        const originalText = button.innerHTML;
                        button.innerHTML = '‚úÖ Image Saved!';
                        setTimeout(() => {
                            button.innerHTML = originalText;
                        }, 2000);
                        
                    } catch (error) {
                        console.error('Image export failed:', error);
                        alert('Failed to export image. Please try again.');
                    }
                }
            }));
        });
    </script>
</body>
</html>